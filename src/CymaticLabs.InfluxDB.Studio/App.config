      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%level] %date - %message%newline" />
      </layout>
    </appender>
    <logger name="AppLogger">
      <appender-ref ref="LogFileAppender" />
    </logger>
    <root>
      <level value="DEBUG" />
    </root>
  </log4net>
